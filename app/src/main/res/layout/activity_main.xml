<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/sacramento"
        android:text="The Julia Zone"
        android:textColor="#FF8888"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/noiseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#660000"
        android:fontFamily="serif"
        android:text="sleepy noise"
        android:textAllCaps="true"
        android:textColor="#FF8888"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <SeekBar
        android:id="@+id/seekBar0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:max="2"
        android:progress="2"
        android:rotation="-90"
        android:progressTint="#660000"
        android:thumbTint="#FF8888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noiseButton" />

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:max="2"
        android:progress="2"
        android:rotation="-90"
        android:progressTint="#660000"
        android:thumbTint="#FF8888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBar0"
        app:layout_constraintEnd_toStartOf="@+id/seekBar2"
        app:layout_constraintTop_toBottomOf="@+id/noiseButton" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:max="2"
        android:progress="2"
        android:rotation="-90"
        android:progressTint="#660000"
        android:thumbTint="#FF8888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noiseButton" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:max="2"
        android:progress="2"
        android:rotation="-90"
        android:progressTint="#660000"
        android:thumbTint="#FF8888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBar2"
        app:layout_constraintEnd_toStartOf="@+id/seekBar4"
        app:layout_constraintTop_toBottomOf="@+id/noiseButton" />

    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:max="2"
        android:progress="2"
        android:rotation="-90"
        android:progressTint="#660000"
        android:thumbTint="#FF8888"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noiseButton" />

</androidx.constraintlayout.widget.ConstraintLayout>